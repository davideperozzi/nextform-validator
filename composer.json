{
    "name": "davideperozzi/nextform-validator",
    "description": "Validator for the nextform php library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Davide Perozzi",
            "email": "davide@dorfjungs.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nextform\\Validation\\": "src/Nextform/Validation",
            "Nextform\\Validators\\": "src/Nextform/Validators"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~5.1",
        "friendsofphp/php-cs-fixer": "^2.4",
        "brainmaestro/composer-git-hooks": "^2.2",
        "davideperozzi/nextform-renderer": "dev-dev"
    },
    "require": {
        "davideperozzi/nextform-config": "dev-dev",
        "davideperozzi/nextform-helpers": "dev-dev"
    },
    "extra": {
        "hooks": {
            "pre-commit": "php ./vendor/bin/php-cs-fixer fix --verbose",
            "post-commit": "php ./vendor/bin/phpunit"
        }
    },
    "scripts": {
        "post-install-cmd": "php ./vendor/bin/cghooks add --ignore-lock",
        "post-update-cmd": "php ./vendor/bin/cghooks update"
    }
}